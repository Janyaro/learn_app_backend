<%- include("./components/header") %>
<nav class="navbar bg-body-tertiary">
  <div class="container-fluid d-flex justify-content-between align-items-center">
    <a class="navbar-brand mb-0 h1">Navbar</a>
    </div>
</nav>
<div class="container my-2">
  <form action="/add/todo" method="POST">
  <div class="input-group flex-nowrap d-flex container-fluid">
    <input type="text" class="form-control" placeholder="Enter todo here" name="todo">
    <input type="submit" value="Save Todos" class="btn btn-primary mx-3">
  </div>
<ul class="list-group my-2">
  <% todo.forEach(todos => { %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= todos.todo %>
      <form action="/delete/todo/<%= todos._id %>" method="POST" style="margin: 0;">
        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
      </form>
    </li>
  <% }); %>
</ul>
  </form>

</div>

<%- include("./components/footer") %>
